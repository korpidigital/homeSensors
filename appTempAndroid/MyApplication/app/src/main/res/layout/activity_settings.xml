<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity_settings">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/smallMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/smallmenu" />

        <ImageView
            android:id="@+id/menuLines"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/group_11" />

        <ImageView
            android:id="@+id/menuHide"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_marginLeft="330dp"
            app:srcCompat="@drawable/asset1" />

        <ImageView
            android:id="@+id/menuHome"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_marginLeft="250dp"
            app:srcCompat="@drawable/home_button_icon_icons_com_72700" />

        <ImageView
            android:id="@+id/menuMessage"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_marginLeft="170dp"
            app:srcCompat="@drawable/pen_black_diagonal_symbol_of_writing_tool_icon_icons_com_54470" />

        <ImageView
            android:id="@+id/menuSettings"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_marginLeft="90dp"
            app:srcCompat="@drawable/settings_cogwheel_button_icon_icons_com_72559" />

        <ImageView
            android:id="@+id/menuGraph"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/path_15" />
        />
    </RelativeLayout>


    <TextView
        android:id="@+id/titleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:text="SETTINGS"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/settingRoom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_hairline"
            android:gravity="center"
            android:text="ROOM1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:paddingTop="150dp"
            android:paddingLeft="30dp"
            >
        </TextView>
        <TextView
            android:id="@+id/settingName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_hairline"
            android:gravity="center"
            android:text="NAME"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingTop="185dp"
            android:paddingLeft="77dp"
            >
        </TextView>
        <EditText
            android:id="@+id/settingsInput1"
            android:textSize="20sp"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="ROOM1"
            android:textStyle="bold"
            android:fontFamily="@font/bungee_hairline"
            android:background="@drawable/my_border2"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="150dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxLength="10"


            />
        <TextView
            android:id="@+id/settingRoom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_hairline"
            android:gravity="center"
            android:text="ROOM2"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:paddingTop="215dp"
            android:paddingLeft="30dp"
            >
        </TextView>
        <TextView
            android:id="@+id/settingName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_hairline"
            android:gravity="center"
            android:text="NAME"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingTop="250dp"
            android:paddingLeft="77dp"
            >
        </TextView>
        <EditText
            android:id="@+id/settingsInput2"
            android:textSize="20sp"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="ROOM2"
            android:textStyle="bold"
            android:fontFamily="@font/bungee_hairline"
            android:background="@drawable/my_border2"
            android:layout_marginTop="245dp"
            android:layout_marginLeft="150dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxLength="10"


            />
        <TextView
            android:id="@+id/settingRoom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_hairline"
            android:gravity="center"
            android:text="ROOM3"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:paddingTop="280dp"
            android:paddingLeft="30dp"
            >
        </TextView>
        <TextView
            android:id="@+id/settingName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_hairline"
            android:gravity="center"
            android:text="NAME"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingTop="315dp"
            android:paddingLeft="77dp"
            >
        </TextView>
        <EditText
            android:id="@+id/settingsInput3"
            android:textSize="20sp"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="ROOM3"
            android:textStyle="bold"
            android:fontFamily="@font/bungee_hairline"
            android:background="@drawable/my_border2"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="150dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxLength="10"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
        android:id="@+id/settingsTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_hairline"
        android:gravity="center"
        android:text="AUTOMATICALLY\nFETCH SENSOR\nDATA AT:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:paddingTop="380dp"
        >
    </TextView>
    <EditText
        android:id="@+id/settingsInputTime"
        android:textSize="20sp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="07:00"
        android:textStyle="bold"
        android:fontFamily="@font/bungee_hairline"
        android:background="@drawable/my_border2"
        android:paddingLeft="17dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:maxLength="5"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="160dp"
        />
    </RelativeLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>